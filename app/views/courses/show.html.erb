<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      <%= @course.course_name %>
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/courses" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_course/<%= @course.id %>" class="btn btn-block btn-outline-secondary">
          Delete course
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @course.course_name %>
      </dd>

      <dt>
        Address
      </dt>
      <dd>
        <%= @course.address %>
      </dd>

      <dt>
        Par
      </dt>
      <dd>
        <%= @course.par %>
      </dd>

      <dt>
        Yardage
      </dt>
      <dd>
        <%= @course.yardage %>
      </dd>

      <dt>
        Created
      </dt>
      <dd>
        <%= time_ago_in_words(@course.created_at) %> ago
      </dd>

      <dt>
        Last Updated
      </dt>
      <dd>
        <%= time_ago_in_words(@course.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit course
    </h2>

    <form action="/modify_course/<%= @course.id %>"  method="post" >
      <div class="form-group">
        <label for="course_name_box">
          Name
        </label>

        <input type="text" id="course_name_box" name="query_course_name" class="form-control" value="<%= @course.course_name %>">
      </div>

      <div class="form-group">
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address" class="form-control" value="<%= @course.address %>">
      </div>

      <div class="form-group">
        <label for="par_box">
          Par
        </label>

        <input type="text" id="par_box" name="query_par" class="form-control" value="<%= @course.par %>">
      </div>

      <div class="form-group">
        <label for="yardage_box">
          Yardage
        </label>

        <input type="text" id="yardage_box" name="query_yardage" class="form-control" value="<%= @course.yardage %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update course
      </button>
    </form>
  </div>
</div>

<hr>
