
<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new course
    </h2>

    <form action="/insert_course" method="post">
      <div class="form-group">
        <label for="course_name_box">
          Name
        </label>

        <input type="text" id="course_name_box" name="query_course_name" class="form-control">
      </div>

      <div class="form-group">
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address" class="form-control">
      </div>

      <div class="form-group">
        <label for="par_box">
          Par
        </label>

        <input type="text" id="par_box" name="query_par" class="form-control">
      </div>

      <div class="form-group">
        <label for="yardage_box">
          Yardage
        </label>

        <input type="text" id="yardage_box" name="query_yardage" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create course
      </button>
    </form>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All Courses
    </h1>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>

        <th>
          Name
        </th>

        <th>
          Address
        </th>

        <th>
          Par
        </th>

        <th>
          Yardage
        </th>

        <th>
          Added
        </th>

        <th>
        </th>
      </tr>

      <% @courses.each do |course| %>
      <tr>

        <td>
          <%= course.course_name.titlecase %>
        </td>

        <td>
          <%= course.address %>
        </td>

        <td>
          <%= course.par %>
        </td>

        <td>
          <%= course.yardage %>
        </td>

        <td>
          <%= time_ago_in_words(course.created_at) %> ago
        </td>

        <td>
          <a href="/courses/<%= course.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
