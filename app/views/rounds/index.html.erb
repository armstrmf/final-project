<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      Recent Rounds
    </h1>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>

        <th>
          Golfer
        </th>

        <th>
          Course
        </th>

        <th>
          Score
        </th>

        <th>
          Date played
        </th>

        <th>
          Tees
        </th>

        <th>
        </th>
      </tr>

      <% @rounds.each do |round| %>
      <tr>

        <td>
          <%= round.golfer.username %>
        </td>

        <td>
          <%= round.course.course_name %>
        </td>

        <td>
          <%= round.score %>
        </td>

        <td>
          <%= round.date_played %>
        </td>

        <td>
          <%= round.tees %>
        </td>

        <td>
          <a href="/rounds/<%= round.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
