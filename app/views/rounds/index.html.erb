<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all rounds
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new round
    </h2>

    <form action="/insert_round" method="post">
      <div class="form-group">
        <label for="golfer_id_box">
          Golfer
        </label>

        <input type="text" id="golfer_id_box" name="query_golfer_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="course_id_box">
          Course
        </label>

        <input type="text" id="course_id_box" name="query_course_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="score_box">
          Score
        </label>

        <input type="text" id="score_box" name="query_score" class="form-control">
      </div>

      <div class="form-group">
        <label for="date_played_box">
          Date played
        </label>

        <input type="date" id="date_played_box" name="query_date_played" class="form-control">
      </div>

      <div class="form-group">
        <label for="tees_box">
          Tees
        </label>

        <input type="text" id="tees_box" name="query_tees" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create round
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Golfer
        </th>

        <th>
          Course
        </th>

        <th>
          Score
        </th>

        <th>
          Date played
        </th>

        <th>
          Tees
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @rounds.each do |round| %>
      <tr>
        <td>
          <%= round.id %>
        </td>

        <td>
          <%= round.golfer_id %>
        </td>

        <td>
          <%= round.course_id %>
        </td>

        <td>
          <%= round.score %>
        </td>

        <td>
          <%= round.date_played %>
        </td>

        <td>
          <%= round.tees %>
        </td>

        <td>
          <%= time_ago_in_words(round.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(round.updated_at) %> ago
        </td>

        <td>
          <a href="/rounds/<%= round.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
