<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      Recent Rounds
    </h1>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Golfer
        </th>

        <th>
          Course
        </th>

        <th>
          Score
        </th>

        <th>
          Date played
        </th>

        <th>
          Tees
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @rounds.each do |round| %>
      <tr>
        <td>
          <%= round.id %>
        </td>

        <td>
          <%= round.golfer_id %>
        </td>

        <td>
          <%= round.course_id %>
        </td>

        <td>
          <%= round.score %>
        </td>

        <td>
          <%= round.date_played %>
        </td>

        <td>
          <%= round.tees %>
        </td>

        <td>
          <%= time_ago_in_words(round.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(round.updated_at) %> ago
        </td>

        <td>
          <a href="/rounds/<%= round.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
