<div >
  <h5>
    Edit Golfer Account
  </h5>

  <div>
    <form action="/modify_golfer" method="post">
      <div>
        <label for="email_box">Email</label>
        <input id="email_box" name="query_email" value="<%= @current_golfer.email %>">
      </div>
      <div>
        <label for="username_box">Username</label>
        <input id="username_box" name="query_username" value="<%= @current_golfer.username %>">
      </div>
      <div>
        <label for="city_box">City</label>
        <input id="city_box" name="query_city" value="<%= @current_golfer.city %>">
      </div>
      <div>
        <label for="state_box">State</label>
        <input id="state_box" name="query_state" value="<%= @current_golfer.state %>">
      </div>

      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
