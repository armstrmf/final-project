<div class="row mb-3">

  <div class="col-md-8 offset-md-2">
    <h1>
      <%= @golfer.username %>'s Profile
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/golfers" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>
    </div>

    <h3>
      Stats
    </h3>

    <dl>
      <dt>
        Average Score
      </dt>
      <dd>
        <%= @golfer.avg_score %>
      </dd>

      <dt>
        Best Score
      </dt>
      <dd>
        <%= @golfer.best_score %>
      </dd>

      <dt>
        Rounds Played
      </dt>
      <dd>
        <%= @golfer.rounds.count %>
      </dd>

      <dt>
        Courses Played
      </dt>
      <dd>
        <%= @golfer.rounds.distinct.pluck(:course_id).count %>
      </dd>

      <dt>
        Favorite Courses
      </dt>
      <dd>
        <%= @golfer.favorite_courses.pluck(:course_name).to_sentence(last_word_connector: ', ', two_words_connector: ', ').titlecase %>
      </dd>

      <dt>
        Last Played
      </dt>
      <dd>
        <% if @golfer.rounds.count == 0 %>
          No rounds yet
        <% else %>
          <%= time_ago_in_words(@golfer.rounds.where({ :golfer_id => @golfer.id }).order({:date_played => :desc}).at(0).date_played) %> ago
        <% end %>
      </dd>
    </dl>

    <hr>

    <h3>
      Account Info
    </h3>
   
    <dl>
      <dt>
        Username
      </dt>
      <dd>
        <%= @golfer.username %>
      </dd>

      <dt>
        City
      </dt>
      <dd>
        <%= @golfer.city %>
      </dd>

      <dt>
        State
      </dt>
      <dd>
        <%= @golfer.state %>
      </dd>

      <dt>
        Email
      </dt>
      <dd>
        <%= @golfer.email %>
      </dd>

      <dt>
        Joined
      </dt>
      <dd>
        <%= time_ago_in_words(@golfer.created_at) %> ago
      </dd>
    </dl>

    <% if @golfer.id == @current_golfer.id %>
    <div class="row mb-3">
      <div class="col">
        <a href="/edit_golfer_profile" class="btn btn-block btn-outline-secondary">
          Edit my account
        </a>
      </div>
    </div>
    <% end %>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <h3>
      Round History
    </h3>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>

        <th>
          Golfer
        </th>

        <th>
          Course
        </th>

        <th>
          Score
        </th>

        <th>
          Played on
        </th>

        <th>
          Tees
        </th>

        <th>
        </th>
      </tr>

      <% @golfer.rounds.each do |round| %>
      <tr>

        <td>
          <%= round.golfer.username %>
        </td>

        <td>
          <%= round.course.course_name.titlecase %>
        </td>

        <td>
          <%= round.score %>
        </td>

        <td>
          <%= round.date_played.strftime("%b-%d-%Y") %>
        </td>

        <td>
          <%= round.tees.titlecase %>
        </td>

        <td>
          <a href="/rounds/<%= round.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
</div>
 </div>

<hr>


